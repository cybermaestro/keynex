  +menu
  +b('header', {}, 'header').position-relative
    +e('circle', {}, 'img')(src="/src/static/images/circle_header.jpg", alt="circle").position-absolute
    img(src="/src/static/images/key_red-big.svg", alt="kuy").position-absolute.set-w-34.set-h-34
    img(src="/src/static/images/key_grey-big.svg", alt="kuy").position-absolute.set-w-48.set-h-50
