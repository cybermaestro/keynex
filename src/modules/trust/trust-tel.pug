mixin trust-tel
  +b('trust-email').position-relative.set-pb-200.set-pt-160
    img(src="/src/static/images/trust-email_circle.png", alt="circle").position-absolute.set-w-144.set-h-144
    img(src="/src/static/images/key_red-small.svg", alt="kuy").position-absolute.set-w-25.set-h-27
    img(src="/src/static/images/trust_kuy.svg", alt="kuy").position-absolute.set-w-33.set-h-35
    img(src="/src/static/images/key_grey-small.svg", alt="kuy").position-absolute.set-w-33.set-h-35
    img(src="/src/static/images/trust-email-circle-big.png", alt="circle").position-absolute
    .container
        +e('header', {}, 'h3').fz-56.lh-72 Чем хорош телемаркетинг 
        +e('cards').d-flex.justify-content-between.set-pt-68
            -
                cards = [
                    {number: '1', header: 'Прямой диалог с клиентом', text: 'Звонки — это единственный способ напрямую </br>пообщаться с потенциальным клиентом, минуя его </br>почтовый ящик и профили в соцсетях'},
                    {number: '2', header: 'Имитация личной встречи', text: 'Вы можете обсудить с клиентом преимущества </br>ваших товаров и услуг в режиме реального </br>времени, отработать возражения и </br>смотивировать к сотрудничеству'},
                    {number: '3', header: 'Контроль продаж', text: 'Вы сразу видите результат от прошедших </br>переговоров и можете провести </br>потенциального клиента от интереса до покупки </br>или заключения контракта'},
                ]
            for card, index in cards
                +e('card')
                    +e('circle').set-pt-10.text-center.fz-48.lh-66= card.number
                    h4.set-mt-40.fz-24.lh-32!= card.header
                    p.set-mt-20.fz-16.lh-24!= card.text