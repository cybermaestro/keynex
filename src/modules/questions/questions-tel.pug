        for question, index in questions
                +b('question').d-flex
                    +e('jackdaw').set-w-46.set-h-46
                        img(src="/src/static/images/jackdaw.svg", alt="jackdaw").set-w-16.set-h-14
                    +e('header', {}, 'h3')!= question.header
                        +e('answer').d-flex.set-pl-32.set-mt-32
