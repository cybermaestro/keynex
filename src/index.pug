extends ./layouts/default
include ./modules/head/head

block head
  +head({ title: 'Список страниц | Высота' })
    
block content
  - 
    pages = [
      { href: '/main.html', title: 'Главная' },
      { href: '/about.html', title: 'О нас' },
    ]

  .page
    .container
      ul.pages-list
        for page in pages
          li
            a(href=page.href)= page.title

  <style> body { margin-left: auto; margin-right: auto; } a { line-height: 1.5; font-size: 16px;} .page { padding-top: 50px; } .pages-list li { margin-bottom: 15px; }</style>